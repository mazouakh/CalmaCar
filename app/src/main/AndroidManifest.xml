<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalmaCar"
        tools:targetApi="31">
        <activity
            android:name=".driver.view.PassengerDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".passenger.view.DriverDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".passenger.view.SuccessfulReservationActivity"
            android:exported="false" />
        <activity
            android:name=".passenger.view.TripsDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".passenger.view.TripsSearchResultActivity"
            android:exported="false" />
        <activity
            android:name=".passenger.view.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.CalmaCar.Toolbar"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".driver.view.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.CalmaCar.Toolbar"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".main.view.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".main.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>