<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passenger.view.TripsDetailsActivity">
    <LinearLayout
        android:id="@+id/ly_up1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@drawable/img_background_home"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Plus de details..."
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="@color/purple_200"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/tv_tripDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Date Trajet"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ly_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly"
        android:paddingHorizontal="30dp">
    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="35sp"
        >
        <TextView
            android:id="@+id/tv_departCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Tours"/>

        <TextView
            android:id="@+id/tv_arrivalCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="Paris"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_departTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="15:00"/>

        <TextView
            android:id="@+id/tv_arrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="20:00"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="19.99€"/>
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ly_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/ly_details"
        android:background="@color/blue"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_tripDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Ici les détails du tajet: je vais partir de la gare du tours"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ly_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_4"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/tv_driverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Conducteur"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/imgv_driverPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_profile"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ly_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_5"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/btn_bookTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textSize="30sp"
            android:text="Réserver"
            />
    </LinearLayout>
</RelativeLayout>
